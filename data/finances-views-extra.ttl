@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix qb: <http://purl.org/linked-data/cube#> .
@prefix finance: <http://worldbank.270a.info/dataset/world-bank-finances/> .
@prefix concept: <http://worldbank.270a.info/classification/> .
@prefix loan-status: <http://worldbank.270a.info/classification/loan-status/> .
@prefix loan-type: <http://worldbank.270a.info/classification/loan-type/> .

concept:loan-status
    a skos:CodeList ;
    skos:hasTopConcept loan-status:approved, loan-status:cancelled, loan-status:disbursed, loan-status:disbursing, loan-status:effective, loan-status:repaid, loan-status:signed, loan-status:terminated ;
    skos:prefLabel "Status of the loan"@en .

loan-status:approved
    a skos:Concept ;
    skos:definition "Loan has been approved by the Bank."@en ;
    skos:inScheme concept:loan-status ;
    skos:prefLabel "Approved"@en ;
    skos:topConceptOf concept:loan-status .

loan-status:cancelled
    a skos:Concept ;
    skos:definition "Entire loan principal has been cancelled."@en ;
    skos:inScheme concept:loan-status ;
    skos:prefLabel "Cancelled"@en ;
    skos:topConceptOf concept:loan-status .

loan-status:disbursed
    a skos:Concept ;
    skos:definition "Loan has no undisbursed balance."@en ;
    skos:inScheme concept:loan-status ;
    skos:prefLabel "Disbursed"@en ;
    skos:topConceptOf concept:loan-status .

loan-status:disbursing
    a skos:Concept ;
    skos:definition "Loan is disbursing."@en ;
    skos:inScheme concept:loan-status ;
    skos:prefLabel "Disbursing"@en ;
    skos:topConceptOf concept:loan-status .

loan-status:effective
    a skos:Concept ;
    skos:definition "Loan has been made effective in accordance with the terms of the legal agreement."@en ;
    skos:inScheme concept:loan-status ;
    skos:prefLabel "Effective"@en ;
    skos:topConceptOf concept:loan-status .

loan-status:repaid
    a skos:Concept ;
    skos:definition "Loan has been fully repaid."@en ;
    skos:inScheme concept:loan-status ;
    skos:prefLabel "Repaid"@en ;
    skos:topConceptOf concept:loan-status .

loan-status:signed
    a skos:Concept ;
    skos:definition "Loan has been signed by both parties."@en ;
    skos:inScheme concept:loan-status ;
    skos:prefLabel "Signed"@en ;
    skos:topConceptOf concept:loan-status .

loan-status:terminated
    a skos:Concept ;
    skos:definition "Unsigned loan that has been cancelled in full."@en ;
    skos:inScheme concept:loan-status ;
    skos:prefLabel "Terminated"@en ;
    skos:topConceptOf concept:loan-status .

concept:loan-type
    a skos:CodeList ;
    skos:definition "A type of loan/loan instrument for which distinctive accounting and/or other actions need to be performed."@en ;
    skos:hasTopConcept loan-type:b-loan, loan-type:fsl, loan-type:ifc-loan, loan-type:non-pool, loan-type:pool-loan, loan-type:scp-dem, loan-type:scp-jpy, loan-type:scp-usd, loan-type:sngl-crncy ;
    skos:prefLabel "Code list for loan types"@en .

loan-type:b-loan
    a skos:Concept ;
    skos:definition "Co-financing lending product that includes Contingency and Regular loans and guarantees."@en ;
    skos:inScheme concept:loan-type ;
    skos:prefLabel "B LOAN"@en ;
    skos:topConceptOf concept:loan-type .

loan-type:fsl
    a skos:Concept ;
    skos:definition "Fixed Spread Loans (includes both fixed spread loans and IBRD flexible loans that have either fixed spread or variable spread terms)."@en ;
    skos:inScheme concept:loan-type ;
    skos:prefLabel "FSL"@en ;
    skos:topConceptOf concept:loan-type .

loan-type:ifc-loan
    a skos:Concept ;
    skos:definition "Single Currency loans to the IFC."@en ;
    skos:inScheme concept:loan-type ;
    skos:prefLabel "IFC LOAN"@en ;
    skos:topConceptOf concept:loan-type .

loan-type:non-pool
    a skos:Concept ;
    skos:definition "Original IBRD lending product, prior to currency pooled loans."@en ;
    skos:inScheme concept:loan-type ;
    skos:prefLabel "IFC LOAN"@en ;
    skos:topConceptOf concept:loan-type .

loan-type:pool-loan
    a skos:Concept ;
    skos:definition "Currency Pooled Loans."@en ;
    skos:inScheme concept:loan-type ;
    skos:prefLabel "POOL LOAN"@en ;
    skos:topConceptOf concept:loan-type .

loan-type:scp-dem
    a skos:Concept ;
    skos:definition "Single Currency Pooled Loans - EUR."@en ;
    skos:inScheme concept:loan-type ;
    skos:prefLabel "SCP DEM"@en ;
    skos:topConceptOf concept:loan-type .

loan-type:scp-jpy
    a skos:Concept ;
    skos:definition "Single Currency Pooled Loans - JPY."@en ;
    skos:inScheme concept:loan-type ;
    skos:prefLabel "SCP JPY"@en ;
    skos:topConceptOf concept:loan-type .

loan-type:scp-usd
    a skos:Concept ;
    skos:definition "Single Currency Pooled Loans - USD."@en ;
    skos:inScheme concept:loan-type ;
    skos:prefLabel "SCP USD"@en ;
    skos:topConceptOf concept:loan-type .

loan-type:sngl-crncy
    a skos:Concept ;
    skos:definition "Single Currency Loans."@en ;
    skos:inScheme concept:loan-type ;
    skos:prefLabel "SNGL CRNCY"@en ;
    skos:topConceptOf concept:loan-type .
